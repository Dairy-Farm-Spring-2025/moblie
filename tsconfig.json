{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["./src/config/*"],
      "@common": ["./src/common/*"],
      "@core": ["./src/core/*"],
      "@store": ["./src/core/store/*"],
      "@services": ["./src/services/*"]
    }
  }
}
